@objects
   naslov h1
   header #header
   logo .logo
   meni #meni 
   glavni #glavni
   glavniSadrzaj #glavniSadrzaj
   side #side
   footer #footer
   footerPara #footer p
= header section =
    meni:
        inside header
        below logo
    logo:
        inside header
        above meni
        left-of naslov
    naslov:
        inside header
        above meni -25px
        right-of logo
= body section =
    header:
        above glavni
    glavniSadrzaj:
        @on desktop
        width 64 to 65 % of screen/width
        right-of side
        above footer
        below header
        @on mobile
        above footer
        below side -422px
    side:
        @on desktop
        width 34 to 35 % of screen/width
        left-of glavniSadrzaj
        above footer
        below header
        @on mobile
        above glavniSadrzaj -422px
        below header
= footer =
    footerPara:
        inside footer