<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>addVjezba</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/assets/addVjezba.css" />
    <link rel="stylesheet" type="text/css" media="screen" href="/assets/headerfooter.css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <script src="/assets/validacija.js"></script>
</head>
<body>
    <header id="header">
            <img class="logo" src="/assets/logo.png" alt="logo">
             <nav id="meni">
                <ul>
                 <li><a href="zadaci.html">Pregled godina</a></li>
                 <li><a href="addGodina.html">Dodavanje godina</a></li>
                 <li><a href="studenti.html">Pregled studenata</a></li>
                 <li><a href="#">Dodavanje vjezbi</a></li>
                 <li><a href="addZadatak.html">Dodavanje zadataka</a></li>
                 <li><a href="addStudent.html">Dodavanje studenata</a></li>
                 <li><a href="commiti.html">Commiti</a></li>
                 </ul>
             </nav>  
             <h1>Dodavanje vjezbe/spirale</h1> 
         </header>
         <section id="glavniSadrzaj">
             <br>
                <form id="fPostojeca" name="fPostojeca" action="/addVjezba" method="POST" enctype="application/x-www-form-urlencoded">
                    <p>Dodavanje postojece vjezbe/spirale</p>
                    <label>Godina</label><br>
                    <select name="sGodine"><!--dropdown list-->
                        <% godine.forEach(function(godina){%>
                        <option value="<%=godina.id%>"><%= godina.nazivGod %></option>
                        <% }); %>
                    </select><br><br>
                    <label>Vjezbe/Spirale</label><br>
                    <select name="sVjezbe"> <!--dropdown list-->
                        <% vjezbe.forEach(function(vjezba){%>
                            <option value="<%=vjezba.id%>"><%= vjezba.naziv %></option>
                            <% }); %>
                    </select><br><br>
                    <input id="sub1" type="submit" name="submit" value="Dodaj">
                </form>

                <form id="fNova" name="fNova" action="/addVjezba" method="POST" enctype="application/x-www-form-urlencoded">
                     <p>Nova vjezba/spirala</p>
                     <label>Naziv vjezbe</label><br>
                     <input type="text" name="vjezbaX" id="naziv" ><br><br>
                     <div id="poruka">Sljedeca polja nisu validna:</div>
                     <label>Godina</label><br>
                     <select name="sGodine"><!--dropdown list-->
                        <% godine.forEach(function(godina){%>
                        <option value="<%=godina.id%>"><%= godina.nazivGod %></option>
                        <% }); %>
                    </select><br><br>
                    <fieldset>
                        <label>Zadatak 1</label><br><br>
                        <label>Zadatak 2</label><br><br>
                        <label>Zadatak 3</label><br><br>
                    </fieldset><br><br>
                <div id="zajednoo">
                    <input type="checkbox" name="spirala">
                    <label id="lspirala" style="margin-left: 0px">Spirala</label>
                    <input id="sub2" type="submit" name="submit" value="Dodaj" onclick="return provjeri()">
                </div>



                </form>

                <div id="zajedno">
                        <form id="fPovezi" name="fPoveziZadatak"  method="POST" enctype="application/x-www-form-urlencoded">
                            <p>Povezi zadatak/vjezba</p>
                            <select name="sVjezbe" id="sVjezbe" onchange="naVjezbu('<%=JSON.stringify(zadaci)%>','<%=JSON.stringify(vjezbazadaci)%>')"> <!--dropdown list-->
                                <option disabled selected>Izaberi vjezbu</option>
                                <% vjezbe.forEach(function(vjezba){%>
                                    <option value="<%=vjezba.id%>"><%= vjezba.naziv %></option>
                                    <% }); %>
                            </select><br><br>
                            <select id="sZadatak" name="sZadatak"><!--dropdown list-->
                                <% zadaci.forEach(function(zadatak){%>
                                    <option><%= zadatak.naziv %></option>
                                    <% }); %>
                            </select>
                            <input type="submit" id="sub3" name="dZadatak" value="Dodaj zadatak" onclick="namjestiAction()"><br><br>
                        </form>
                </div>

            </section>
            <footer id="footer">
                    <p>Web tehnologije 2018/19</p>
                </footer>
                <script src="/assets/addVjezba.js"></script>
    
</body>
</html>